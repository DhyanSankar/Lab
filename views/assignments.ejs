<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assignment Manager</title>

    <link rel="stylesheet" href="stylesheets/materialize.min.css">
    
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link rel="stylesheet" href="/stylesheets/stuffStyle.css">
</head>
<body>
    
    <%- include('partials/navbar') %>

    <div class="container">
        <h1>Assignments:</h1>
        <a class="waves-effect waves-light btn" href="/">
            <i class="material-icons left">arrow_back</i>
            Return to home page
        </a>
            <table class="striped highlight centered">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Class</th>
                    <th>Due Date</th>
                </tr>
                </thead>

                <tbody>
                    <% for (let i = 0; i < hwlist.length; i++) { %>
                    <tr>
                        <td><%= hwlist[i].assignment_name %></td>
                        <td><%= hwlist[i].subject_name %></td>
                        <td><%= hwlist[i].assignment_date %></td>
                        <td>
                            <a class="btn-small waves-effect waves-light" href=<%= "/assignments/item/" + hwlist[i].assignment_id %> ><i
                                    class="material-icons right">edit</i>Info/Edit</a>
                            <a class="btn-small waves-effect waves-light red" href="/assignments/item/<%= hwlist[i].assignment_id %>/delete">
                                <i class="material-icons right">delete</i>
                                Delete
                            </a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        <h1>Add Assignments:</h1>
        <div class="row">
            <form method="post" action="/assignments">
                <div class="row">
                    <div class="input-field col s4">
                        <label for="nameInput">Assignment Name:</label>
                        <input type="text" name="assignment_name" id="name" class="validate" data-length="32">
                    </div>
                    <div class="input-field col s4">
                        <select id="classNameInput" name="subject_id" required>
                            <option value="" disabled selected>Choose your subject</option>
                            <% for (let i = 0; i < subjectlist.length; i++) { %>
                                <option value=<%=subjectlist[i].subject_id %>><%= subjectlist[i].subject_name %></option>
                            <% } %>
                        </select>
                        <label for="classNameInput">Subject:</label>
                    </div>
                    <div class="input-field col s4">
                        <label for="dueDateInput">Due Date:</label>
                        <input type="text" name="assignment_date" id="dueDateInput">
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <label for="descriptionInput">Assignment Description:</label>
                        <input type="text" name="assignment_description" id="descriptionInput" data-length="100">
                    </div>
                </div> 
                
                <button class="btn-small waves-effect waves-light" type="submit">
                    Submit
                    <i class="material-icons right">send</i>
                </button>
            </form>
        </div>
       
    </div>
    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- initialize Materialize elements -->
    <script src="/scripts/materializeAutoinit.js"></script>
</body>
</html>