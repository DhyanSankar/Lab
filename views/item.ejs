<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assignment Details</title>
        
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    
    <link rel="stylesheet" href="/stylesheets/stuffStyle.css">
</head>
<body>

    <%- include('partials/navbar') %>
    
    <div class="container">
        <h1>Assignment Details:</h1>
        <a class="btn-small waves-effect waves-light" href="/assignments">
            <i class="material-icons left">arrow_back</i>
            Return to assignment list
        </a>
        <table class="striped highlight">
            <tbody>
                <tr>
                    <th>Assignment:</th><td><%= hwlist.assignment_name %></td>
                </tr>
                <tr>
                    <th>Class:</th><td><%= hwlist.subject_name %></td>
                </tr>
                <tr>
                    <th>Due Date:</th><td><%= hwlist.assignment_date %></td>
                </tr>
                <tr>
                    <th>Description:</th><td><%= hwlist.assignment_description %></td>
                </tr>
            </tbody>
        </table>

        <div class="section" id="stuffControls">
            <a class="btn-large waves-effect waves-light orange left modal-trigger" href="#stuffEdit">
                <i class="material-icons right">edit</i>Edit
            </a>
            <a class="btn-large waves-effect waves-light red right"  href="/assignments/item/<%= hwlist.assignment_id %>/delete" %>>
                <i class="material-icons right">delete</i>Delete
            </a>
        </div>


        <div class="modal" id="stuffEdit">

            <div class="modal-content">

                <h2>Edit item:</h2>
                <form method="post" action="/assignments/item/<%= hwlist.assignment_id%>"> <!-- default action is the page's URL --> 
                    <div class="row">
                        <div class="input-field col s6">
                            <label for="nameInput">Assignment Name:</label>
                            <input type="text" name="assignment_name" id="nameInput" class="validate" data-length="32" value="<%= hwlist.assignment_name%>" required>
                        </div>
                        <div class="input-field col s6">

                            <select id="classNameInput" name="subject_id" required>
                                <option value="" disabled selected>Choose your subject</option>
                                <% for (let i = 0; i < subjectlist.length; i++) { %>
                                    <option value=<%=subjectlist[i].subject_id %>><%= subjectlist[i].subject_name %></option>
                                <% } %>
                            </select>
                            <label for="classNameInput">Subject:</label>
                        </div>
                        <div class="input-field col s6">
                            <label for="classInput">Due Date:</label>
                            <input type="text" name="assignment_date" id="dueDateInput" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <label for="descriptionInput">Assignment Description:</label>
                            <input type="text" name="assignment_description" id="descriptionInput" data-length="100" value="<%= hwlist.assignment_description%>">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn waves-effect waves-light " type="submit"><i
                                class="material-icons right">send</i>Submit</button>

                        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Never Mind</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- initialize Materialize elements -->
    <script src="/scripts/materializeAutoinit.js"></script>

</body>
</html>